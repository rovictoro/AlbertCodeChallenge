<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/doc_cover"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/input_hint"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/doc_author"
        android:layout_width="0dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        tools:text="name:"
        app:layout_constraintStart_toStartOf="@+id/doc_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_cover"
        app:layout_constraintBottom_toTopOf="@+id/doc_title"/>

    <TextView
        android:id="@+id/doc_title"
        android:layout_width="0dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:gravity="start"

        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        tools:text="brand:"
        app:layout_constraintStart_toStartOf="@+id/doc_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_author"
        app:layout_constraintBottom_toTopOf="@+id/doc_publisher"/>

    <TextView
        android:id="@+id/doc_publisher"
        android:layout_width="0dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        tools:text="division:"
        app:layout_constraintStart_toStartOf="@+id/doc_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_title"
        app:layout_constraintBottom_toTopOf="@+id/doc_first_publish_year"/>

    <TextView
        android:id="@+id/doc_first_publish_year"
        android:layout_width="0dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        tools:text="department:"
        app:layout_constraintStart_toStartOf="@+id/doc_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_publisher"
        app:layout_constraintBottom_toTopOf="@+id/close"/>

    <ImageView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/ic_save_blue_24dp"
        app:layout_constraintTop_toBottomOf="@+id/doc_first_publish_year"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        android:contentDescription="@string/input_hint"
        />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/ic_close_blue_24dp"
        app:layout_constraintTop_toBottomOf="@+id/doc_first_publish_year"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        android:contentDescription="@string/input_hint"
        />

</androidx.constraintlayout.widget.ConstraintLayout>